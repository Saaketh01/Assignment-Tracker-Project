<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <br>
        <h1><%= title %></h1>
        <br>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="CourseNameTextField">Course Name</label>
                    <input type="text" class="form-control"
                    id="CourseNameTextField"
                    placeholder="Enter the Course Name"
                    name="CourseName" 
                    required>
                </div>
              <br>

                <div class="form-group">
                    <label for="AssignmentNameTextField">Assignment Name</label>
                    <input type="text" class="form-control"
                    id="AssignmentNameTextField"
                    placeholder="Enter the Assignment Name"
                    name="AssignmentName" 
                    required>
                </div>
              <br>

                <div class="form-group">
                    <label for="DuedateTextField">Due Date</label>
                    <input type="text" class="form-control"
                    id="DuedateTextField"
                    placeholder="Enter the Due Date"
                    name="DueDate" 
                    required>
                </div>
              <br>  

                <div class="form-group">
                    <label for="StatusTextField">Status</label>
                    <input type="text" class="form-control"
                    id="StatusTextField"
                    placeholder="Enter the status of the assignment"
                    name="Status" 
                    required>
                </div>
              <br>

                <br>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/assignmentlist" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>
    </div>
</div>


